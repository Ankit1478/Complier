datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Question {
  id        Int        @id @default(autoincrement())
  title     String
  content   String
  language  String
  testCases TestCase[]
}

model TestCase {
  id         Int      @id @default(autoincrement())
  input      String
  expected   String
  questionId Int
  Question   Question @relation(fields: [questionId], references: [id])
}
